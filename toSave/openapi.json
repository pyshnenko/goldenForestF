                    "type": "boolean",
                    "example": true
                  },
                  "pict": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "default": [
                        "html 1",
                        "addr 2"
                      ]
                    }
                  },
                  "text": {
                    "type": "string",
                    "example": "Текст с описанием мероприятия"
                  },
                  "name": {
                    "type": "string",
                    "example": "Название мероприятия"
                  },
                  "gold": {
                    "type": "number",
                    "example": 10000
                  },
                  "nowGold": {
                    "type": "number",
                    "example": 1000
                  },
                  "date": {
                    "type": "number",
                    "example": 123456789
                  },
                  "activeMembers": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "default": [
                        "Spamigor",
                        "Treasurer"
                      ]
                    }
                  },
                  "orginizer": {
                    "type": "string",
                    "example": "Spamigor"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Выполнено"
          },
          "401": {
            "description": "Недостаточно прав"
          },
          "402": {
            "description": "Не авторизован"
          },
          "403": {
            "description": "Некорректный токен или данные"
          }
        },
        "security": [
